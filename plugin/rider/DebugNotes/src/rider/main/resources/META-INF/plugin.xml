<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.debugnotes</id>
  <name>DebugNotes</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://project-url">Author</vendor>
  <idea-version since-build="212" until-build="213.* " />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Sample description</p>
]]>
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable groupId="language" instance="com.jetbrains.rider.plugins.debugnotes.SampleOptionsPage" id="SampleOptionsPage" />
<!--    <toolWindow id="Debug Notes" secondary="true" icon="AllIcons.General.Modified" anchor="right"-->
<!--                factoryClass="org.intellij.sdk.toolWindow.MyToolWindowFactory"/>-->
    <toolWindow id="Debug Notes" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                factoryClass="org.debugnotes.toolWindow.DebugNotesToolWindowFactory"/>
  </extensions>

  <actions>
    <action id="SampleAction"
            class="com.jetbrains.rider.plugins.debugnotes.SampleAction"
            text="DebugNotes"
            description="DebugNotes Description">
      <override-text place="MainMenu" text="Do Something"/>
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>
  </actions>
  <project-components>
    <component>
      <implementation-class>com.jetbrains.rider.plugins.debugnotes.DebugNotesComponent</implementation-class>
    </component>
  </project-components>

</idea-plugin>
